<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_5"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/dim_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRankingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            android:padding="@dimen/dim_5"
            android:text="怀旧榜单"
            android:textColor="@android:color/black"
            android:textSize="?largeSize" />

        <View style="@style/View_Line_H" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100"
            android:layout_marginLeft="@dimen/dim_5"
            android:padding="@dimen/dim_5">

            <ImageView
                android:id="@+id/imgRanking"
                android:layout_width="@dimen/dim_80"
                android:layout_height="@dimen/dim_80"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/nopic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_80"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dim_10"
                android:layout_toLeftOf="@+id/right"
                android:layout_toRightOf="@+id/imgRanking"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="dadadasdsadasdadasdada"
                    android:textSize="?smallSize" />

                <TextView
                    android:id="@+id/txtName1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="dadadasdsadasdadasdada"
                    android:textSize="?smallSize" />

                <TextView
                    android:id="@+id/txtName2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="dadadasdsadasdadasdada"
                    android:textSize="?smallSize" />

                <TextView
                    android:id="@+id/txtName3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="dadadasdsadasdadasdada"
                    android:textSize="?smallSize" />
            </LinearLayout>

            <ImageView
                android:id="@+id/right"
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_gray" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>