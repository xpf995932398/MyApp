<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_5"
    android:layout_marginBottom="@dimen/dim_5"
    android:background="@drawable/border_xian"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="@dimen/dim_150"
        android:layout_height="@dimen/dim_150"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ranking" />

    <RelativeLayout
        android:id="@+id/llBottom"
        android:layout_width="@dimen/dim_150"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_toLeftOf="@+id/ivRight"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="@dimen/dim_5">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="分类1"
                android:textColor="@android:color/white"
                android:textSize="?smallSize" />


            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="分类1"
                android:textColor="@android:color/white"
                android:textSize="?smallSize" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim_5"
            android:src="@drawable/player_bg" />
    </RelativeLayout>
</LinearLayout>