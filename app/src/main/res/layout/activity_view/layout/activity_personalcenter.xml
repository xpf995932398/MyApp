<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="OnMyClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_topview" />

        <RelativeLayout
            android:id="@+id/rlInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:onClick="@{OnMyClickListener}"
            android:padding="@dimen/dim_10">

            <xpfei.myapp.view.RoundImageView
                android:id="@+id/imgHeader"
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_alignParentLeft="true"
                android:onClick="@{OnMyClickListener}"
                android:src="@mipmap/header" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_toRightOf="@+id/imgHeader"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="许鹏飞"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="账号：xpf"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@android:color/white"
            android:gravity="center|left"
            android:onClick="@{OnMyClickListener}"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:gravity="center"
                android:text="本地音乐"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@color/colorGray_cc" />

        <LinearLayout
            android:id="@+id/llVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|left"
            android:onClick="@{OnMyClickListener}"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:gravity="center"
                android:text="本地视频"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@color/colorGray_cc" />

        <LinearLayout
            android:id="@+id/llPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|left"
            android:onClick="@{OnMyClickListener}"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:gravity="center"
                android:text="本地图片"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@android:color/white"
            android:gravity="center|left"
            android:onClick="@{OnMyClickListener}"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:gravity="center"
                android:text="设置"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_30"
            android:layout_marginRight="@dimen/dim_30"
            android:layout_marginTop="@dimen/dim_30"
            android:background="@color/colorBlue"
            android:onClick="@{OnMyClickListener}"
            android:text="退出登陆"
            android:textColor="@android:color/white" />
    </LinearLayout>
</layout>